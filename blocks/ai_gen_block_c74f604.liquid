{% doc %}
  @prompt
    Create a customizable menu section that displays navigation links from a selected menu. Include a setting to show this section only on mobile devices. The section should have options to select which menu to display and a toggle to enable mobile-only visibility., remove the title and the title settings

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-menu-block-{{ ai_gen_id }} {
    display: block;
    padding: {{ block.settings.padding }}px;
    background-color: {{ block.settings.background_color }};
    border-radius: {{ block.settings.border_radius }}px;
    margin-bottom: {{ block.settings.margin_bottom }}px;
  }

  .ai-menu-list-{{ ai_gen_id }} {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: {{ block.settings.menu_direction }};
    gap: {{ block.settings.menu_spacing }}px;
    flex-wrap: {{ block.settings.menu_wrap }};
    justify-content: {{ block.settings.menu_alignment }};
  }

  .ai-menu-item-{{ ai_gen_id }} {
    margin: 0;
  }

  .ai-menu-link-{{ ai_gen_id }} {
    display: block;
    padding: {{ block.settings.link_padding }}px;
    color: {{ block.settings.link_color }};
    text-decoration: none;
    font-size: {{ block.settings.link_size }}px;
    font-weight: {{ block.settings.link_weight }};
    border-radius: {{ block.settings.link_border_radius }}px;
    transition: background-color 0.3s, color 0.3s;
  }

  .ai-menu-link-{{ ai_gen_id }}:hover,
  .ai-menu-link-{{ ai_gen_id }}:focus {
    color: {{ block.settings.link_hover_color }};
    background-color: {{ block.settings.link_hover_bg }};
  }

  .ai-menu-link-{{ ai_gen_id }}.active {
    tex-decoration: underline;
  }

  {% if block.settings.mobile_only %}
    @media screen and (min-width: 750px) {
      .ai-menu-block-{{ ai_gen_id }} {
        display: none;
      }
    }
  {% endif %}

  @media screen and (max-width: 749px) {
    .ai-menu-list-{{ ai_gen_id }} {
      flex-direction: {{ block.settings.menu_direction_mobile }};
      justify-content: {{ block.settings.menu_alignment_mobile }};
      gap: {{ block.settings.menu_spacing_mobile }}px;
    }
    
    .ai-menu-link-{{ ai_gen_id }} {
      font-size: {{ block.settings.link_size | times: 0.9 }}px;
      padding: {{ block.settings.link_padding | times: 0.8 }}px;
    }
  }
{% endstyle %}

{% if block.settings.selected_menu != blank %}
  <div class="ai-menu-block-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
    {% if linklists[block.settings.selected_menu].links.size > 0 %}
      <ul class="ai-menu-list-{{ ai_gen_id }}">
        {% for link in linklists[block.settings.selected_menu].links %}
          <li class="ai-menu-item-{{ ai_gen_id }}">
            <a 
              href="{{ link.url }}" 
              class="ai-menu-link-{{ ai_gen_id }}{% if link.active or link.current %} active{% endif %}"
              {% if link.active or link.current %}aria-current="page"{% endif %}
            >
              {{ link.title }}
            </a>
          </li>
        {% endfor %}
      </ul>
    {% else %}
      <p>{{ block.settings.empty_menu_message }}</p>
    {% endif %}
  </div>
{% endif %}


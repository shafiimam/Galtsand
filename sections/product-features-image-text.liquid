<section class="product-features-image-text {{ section.settings.width }}">
  <div class="product-features-image-text__inner">
    <div class="product-features-image-text__image">
      <img
        src="{{ section.settings.image | image_url: width: 1000 }}"
        alt="{{ section.settings.title }}"
        width="100%"
        height="100%"
      >
    </div>
    <div class="product-features-image-text__blocks">
      {% for block in section.blocks %}
        {% case block.type %}
          {% when 'title' %}
            <div class="product-features-image-text__title font-heading">
              {{ block.settings.title }}
            </div>
          {% when 'text' %}
            <div class="product-features-image-text__text font-body">
              {{ block.settings.text }}
            </div>
          {% when 'feature_card' %}
            <div class="product-features-image-text__feature-card">
              <div class="product-features-image-text__feature-card-title font-heading">
                {{ block.settings.title }}
              </div>
              <div class="product-features-image-text__feature-card-text">
                {{ block.settings.text }}
              </div>
            </div>
        {% endcase %}
      {% endfor %}
    </div>
  </div>
</section>
<style>
  .product-features-image-text__inner {
    display: grid;
    grid-template-columns: 1fr 1fr;
    justify-content: center;
    align-items: center;
    gap: 20px;
    padding: 100px 0;
    @media screen and (max-width: 768px) {
      grid-template-columns: 1fr;
      padding: 40px 0;
    }
  }
  .product-features-image-text__title {
    color: #006a50;
    font-size: 100px;
    font-style: normal;
    font-weight: 700;
    line-height: 100%;
    margin-bottom: 28px;
    @media screen and (max-width: 768px) {
      font-size: 40px;
    }
  }
  .product-features-image-text__text p {
    color: #006a50;
    font-size: 20px;
    font-style: normal;
    line-height: 100%;
    max-width: 400px;
    margin-bottom: 52px;
    @media screen and (max-width: 768px) {
      font-size: 16px;
    }
  }
  .product-features-image-text__feature-card {
    display: flex;
    flex-direction: column;
    gap: 20px;
    padding: 20px;
    border: 1px solid #006A50;
    margin-bottom: 20px;
  }
  .product-features-image-text__feature-card-title {
    color: #006a50;
    font-size: 40px;
    font-style: normal;
    font-weight: 400;
    line-height: 100%;
  }
  .product-features-image-text__feature-card-text p {
    color: #006a50;
    font-family: var(--FONT-STACK-BODY);
    font-size: 16px;
    font-style: normal;
    font-weight: 400;
    line-height: 140%;
  }
</style>
{% schema %}
{
  "name": "Product Feat Image Text",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "select",
      "id": "width",
      "label": "Width",
      "default": "wrapper",
      "options": [
        { "value": "wrapper--full", "label": "Full width padded" },
        { "value": "wrapper", "label": "Page width" },
        { "value": "wrapper--narrow", "label": "Page width narrow" },
        { "value": "wrapper--tiny", "label": "Page width extra narrow" }
      ]
    }
  ],
  "blocks": [
    {
      "type": "title",
      "name": "Title",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Title"
        }
      ]
    },
    {
      "type": "text",
      "name": "Text",
      "settings": [
        {
          "type": "richtext",
          "id": "text",
          "label": "Text"
        }
      ]
    },
    {
      "type": "feature_card",
      "name": "Feature Card",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "richtext",
          "id": "text",
          "label": "Text"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Product Features Image Text",
      "settings": {
        "width": "full"
      }
    }
  ]
}
{% endschema %}

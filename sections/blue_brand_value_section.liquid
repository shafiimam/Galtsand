<div
  class="brand-values-section {{ section.settings.width }} section-padding"
  data-section-id="{{ section.id }}"
  style="padding-top: {{ section.settings.padding_top }}px; padding-bottom: {{ section.settings.padding_bottom }}px;"
>
  <div class="brand-values-images">
    <img src="{{ section.settings.left_image | img_url: 'master' }}" alt="Left Image" class="brand-left-image ">
  </div>

  <div class="brand-values-content">
    <img src="{{ section.settings.logo | img_url: 'master'  }}" alt="Logo" class="brand-logo">
    <h2 class="heading-size-10 mb-r6" style="color: {{ section.settings.text_color }};">
      {{ section.settings.title }}
    </h2>
    <p class="body-size-6 brand-values-paragraph">{{ section.settings.paragraph }}</p>
    <a
      href="{{ section.settings.button_link }}"
      class="standard__cta hero__btn aos-init aos-animate {{ section.settings.button_size }} {{ section.settings.button_style }} {{ section.settings.button_color }}"
    >
      {{- section.settings.button_text -}}
    </a>
  </div>

  <div class="brand-values-images">
    {% if section.settings.right_image_type == 'image' %}
      <img src="{{ section.settings.right_image | img_url: 'master' }}" alt="Right Image" class="brand-right-image">
    {% elsif section.settings.right_image_type == 'video' %}
      <video controls class="brand-right-video">
        <source src="{{ section.settings.right_video }}" type="video/mp4">
        Your browser does not support the video tag.
      </video>
    {% endif %}
  </div>
</div>

<style>
  .secondP {
    text-align: center;
    font-size: 16px;
    font-style: normal;
    font-weight: 400;
    line-height: 140%; /* 22.4px */
    max-width: 350px;
    margin: 0 auto;
    @media only screen and (min-width: 1000px) {
      max-width: 586px;
    }
  }
  .brand-values-paragraph {
    color: {{ section.settings.text_color }};
    font-weight: 400;
    line-height: 140%; /* 22.4px */
    letter-spacing: 0.32px;
    text-transform: uppercase;
    text-align: center;
  }
  .firstP {
    font-size: 64px;
  }
  .brand-values-section {
    display: grid;
    grid-template-columns: 1fr 1fr 1fr;
    align-items: center;
    justify-content: center;
    gap: 20px;
  }

  .brand-values-images {
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .brand-left-image,
  .brand-right-image {
    width: 100%;
    height: auto;
  }

  .brand-right-video {
    width: 100%;
    max-width: 300px;
    border-radius: 10px;
  }

  .brand-values-content {
    background: #F0EDE6;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    padding: 40px;
    gap: var(--gutter);
  }

  .brand-logo {
    width: 140px;
  }

  .brand-button {
    display: inline-block;
    padding: 10px 20px;
    text-decoration: none;
    margin-top: 20px;
    border-radius: 5px;
  }
  @media (min-width: 768px) and (max-width: 1100px) {
    .firstP {
      font-size: 2.2rem;
    }
    .brand-values-content .standard__cta {
      font-size: 16px !important;
    }
  }
  @media (max-width: 768px) {
    .brand-values-section {
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
    }
    .firstP {
      font-size: 3rem;
    }
    .brand-values-images,
    .brand-values-content {
      width: 100%;
      text-align: center;
    }
  }
</style>

{% schema %}
{
  "name": "Brand Values Section",
  "settings": [
    {
      "type": "image_picker",
      "id": "left_image",
      "label": "Left Image"
    },
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Brand Values Section"
    },
    {
      "type": "textarea",
      "id": "paragraph",
      "label": "Paragraph",
      "default": "Orci ac egestas tellus sed sit. Metus eget nisi egestas sapien sit mattis nunc."
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text color",
      "default": "#4f555f"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "See How We Do It"
    },
    {
      "type": "select",
      "id": "button_size",
      "label": "Size",
      "default": "btn--long",
      "options": [
        { "value": "btn--small", "label": "Small button" },
        { "value": "btn--medium", "label": "Medium button" },
        { "value": "btn--large", "label": "Large button" },
        { "value": "btn--long", "label": "Long button" }
      ]
    },
    {
      "type": "select",
      "id": "button_style",
      "label": "Style",
      "default": "btn",
      "options": [
        { "value": "btn-text-thick-line", "label": "Capitalized text" },
        { "value": "btn", "label": "Solid button" },
        { "value": "btn--soft", "label": "Soft button" },
        { "value": "btn--outline", "label": "Outlined button" }
      ]
    },
    {
      "type": "select",
      "id": "button_color",
      "label": "Color",
      "default": "btn--white",
      "options": [
        { "value": "btn--primary", "label": "Bright accent" },
        { "value": "btn--secondary", "label": "Secondary accent" },
        { "value": "btn--neutral", "label": "Text color" },
        { "value": "btn--black", "label": "Black" },
        { "value": "btn--white", "label": "White" }
      ]
    },
    {
      "type": "radio",
      "id": "right_image_type",
      "label": "Right Image Type",
      "options": [
        { "value": "image", "label": "Image" },
        { "value": "video", "label": "Video" }
      ],
      "default": "image"
    },
    {
      "type": "image_picker",
      "id": "right_image",
      "label": "Right Image"
    },
    {
      "type": "url",
      "id": "right_video",
      "label": "Right Video URL"
    },
    {
      "type": "header",
      "content": "Section Settings"
    },
    {
      "type": "select",
      "id": "width",
      "label": "Width",
      "default": "wrapper",
      "options": [
        { "value": "wrapper--none", "label": "Full width" },
        { "value": "wrapper--full", "label": "Full width padded" },
        { "value": "wrapper", "label": "Page width" },
        { "value": "wrapper--narrow", "label": "Page width narrow" },
        { "value": "wrapper--tiny", "label": "Page width extra narrow" }
      ]
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 180,
      "step": 2,
      "unit": "px",
      "label": "Padding top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 180,
      "step": 2,
      "unit": "px",
      "label": "Padding bottom",
      "default": 36
    }
  ],
  "presets": [
    {
      "name": "Brand Values Section",
      "category": "Custom"
    }
  ]
}
{% endschema %}

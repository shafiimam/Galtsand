<div class="materials-section">
  <div class="materials-section__title">
   <h1 class="heading h1">{{ section.settings.materials_title }}</h1>
  </div>
  <div class="materials-section-cards">
    {% for block in section.blocks %}
      <div class="material-card" {{ block.shopify_attributes }}>
        <div class="marterial-card-heading">
          <img src="{{ block.settings.image | image_url: width: 150 }}" alt="{{ block.settings.material_title }}" width="100" height="100">
          <h3 class="heading h2">{{ block.settings.material_title }}</h3>
        </div>
        <div class="material-card-description">
          {{ block.settings.description }} 
        </div>
      </div>
    {% endfor %}
  </div>
</div>
{{ 'section-materials.css' | asset_url | stylesheet_tag }}
{% schema %}
{
  "name": "Materials",
  "settings": [
    {
      "id": "materials_title",
      "type": "text",
      "label": "Materials Title",
      "default": "Materials"
    }
  ],
  "blocks": [
    {
      "type": "material",
      "name": "Material",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "id": "material_title",
          "type": "text",
          "label": "Material Title",
          "default": "Lycra"
        },
        {
          "id": "description",
          "type": "richtext",
          "label": "Description"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Materials",
      "category": "Customs"
    }
  ]
}
{% endschema %}

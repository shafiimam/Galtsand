{% schema %}
{
  "name": "How to Style T-Shirts",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Section Title",
      "default": "How to Style Your T-Shirts"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Section Subtitle",
      "default": "Unlock the full potential of your T-shirt collection"
    }
  ],
  "blocks": [
    {
      "type": "style_row",
      "name": "Style Row",
      "limit": 3,
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "Pair with Jeans"
        },
        {
          "type": "text",
          "id": "description",
          "label": "Description",
          "default": "Achieve a timeless, effortless look"
        },
        {
          "type": "product",
          "id": "product_1",
          "label": "Select Product 1"
        },
        {
          "type": "product",
          "id": "product_2",
          "label": "Select Product 2"
        },
        {
          "type": "product",
          "id": "product_3",
          "label": "Select Product 3"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "How to Style T-Shirts",
      "category": "Custom Sections",
      "blocks": [
        {
          "type": "style_row"
        },
        {
          "type": "style_row"
        },
        {
          "type": "style_row"
        }
      ]
    }
  ]
}
{% endschema %}

<style>
  .style-section {
    background-color: #006a50;
    padding: 60px 30px;
    text-align: center;
    color: #e6dbc4;
    overflow: hidden;
  }

  .style-section h2 {
    font-family: 'exmouth';
    font-size: 106px;
    text-transform: none;
    margin-bottom: 10px;
    letter-spacing: 1px;
  }

  .style-section p {
    font-family: 'EngraversGothicBT-Heavy';
    font-size: 18px;
    margin-bottom: 40px;
  }

  /* Desktop Layout */
  .desktop-view {
    display: flex;
    flex-direction: column;
    gap: 40px;
  }

  .style-row {
    display: flex;
    align-items: center;
    justify-content: space-between;
  }

  .style-text {
    width: 25%;
    text-align: left;
  }

  .style-text h3 {
    font-family: 'Gambarino-Regular';
    font-size: 64px;
    margin-bottom: 5px;
  }

  .style-text p {
    font-family: 'Inter Tight';
    font-size: 16px;
    opacity: 0.8;
  }

  .style-products {
    width: 75%;
    display: flex;
    gap: 20px;
  }

  .style-product {
    text-align: left;
    flex: 0 0 32%;
  }

  /* Ensures all images have the same size */
  .style-product img {
    width: 100%;
    height: auto;
    object-fit: cover;
    aspect-ratio: 1 / 1.4;
  }

  .style-product h4 {
    font-family: 'EngraversGothicBT-Heavy';
    font-size: 16px;
    font-weight: bold;
    margin-top: 10px;
  }

  .style-product p {
    font-family: 'EngraversGothicBT-Heavy';
    font-size: 14px;
    opacity: 0.8;
  }

  .mobile-slider-container {
    display: none;
  }

  /* Mobile View */
  @media (max-width: 768px) {
    .style-section {
      text-align: left;
      align-items: flex-start;
    }
    .desktop-view {
      display: none;
    }

    .mobile-slider-container {
      width: 100%;
      display: block;
    }

    .mobile-slider {
      display: flex;
      overflow-x: auto;
      -webkit-overflow-scrolling: touch;
      gap: 10px;
      scroll-behavior: smooth;
    }

    .mobile-slide {
      flex: 0 0 100%;
      scroll-snap-align: start;
      display: flex;
      flex-direction: column;
      align-items: center;
    }

    .mobile-text {
      text-align: left;
      margin-bottom: 15px;
    }

    .mobile-text h3 {
      font-family: 'Gambarino-Regular';
      font-size: 41px;
      margin-bottom: 5px;
    }

    .mobile-text p {
      font-family: 'Inter Tight';
      font-size: 16px;
      opacity: 0.8;
    }

    .style-products {
      display: flex;
      width: 100%;
      gap: 10px;
      justify-content: space-between;
    }

    .style-product {
      flex: 0 0 82%;
    }

    /* Hide scrollbar */
    .mobile-slider::-webkit-scrollbar {
      display: none;
    }
    .style-section h2 {
      font-size: 75px;
    }
  }
</style>

<div class="style-section">
  <h2>{{ section.settings.title }}</h2>
  <p>{{ section.settings.subtitle }}</p>

  <!-- Desktop View -->
  <div class="desktop-view">
    {% for block in section.blocks %}
      <div class="style-row">
        <div class="style-text">
          <h3>{{ block.settings.heading }}</h3>
          <p>{{ block.settings.description }}</p>
        </div>
        <div class="style-products">
          {% for i in (1..3) %}
            {% assign product_var = 'product_' | append: i %}
            {% if block.settings[product_var] != blank %}
              <div class="style-product">
                <a href="{{ block.settings[product_var].url }}">
                  <img src="{{ block.settings[product_var].featured_image | img_url: 'large' }}">
                  <h4>{{ block.settings[product_var].title }}</h4>
                  <p>{{ block.settings[product_var].price | money }}</p>
                </a>
              </div>
            {% endif %}
          {% endfor %}
        </div>
      </div>
    {% endfor %}
  </div>

  <!-- Mobile View -->
  {% for block in section.blocks %}
    <div class="mobile-slider-container">
      <!-- Text above the slide -->
      <div class="mobile-text">
        <h3>{{ block.settings.heading }}</h3>
        <p>{{ block.settings.description }}</p>
      </div>

      <div class="mobile-slider">
        <div class="mobile-slide">
          <div class="style-products">
            {% for i in (1..3) %}
              {% assign product_var = 'product_' | append: i %}
              {% if block.settings[product_var] != blank %}
                <div class="style-product">
                  <a href="{{ block.settings[product_var].url }}">
                    <img src="{{ block.settings[product_var].featured_image | img_url: 'large' }}">
                    <h4>{{ block.settings[product_var].title }}</h4>
                    <p>{{ block.settings[product_var].price | money }}</p>
                  </a>
                </div>
              {% endif %}
            {% endfor %}
          </div>
        </div>
      </div>
    </div>
  {% endfor %}
</div>

<script>
  let currentSlide = 0;
  const slides = document.querySelector('.mobile-slider');
  const totalSlides = slides.children.length;

  function nextSlide() {
    if (currentSlide < totalSlides - 1) {
      currentSlide++;
      slides.style.transform = `translateX(-${currentSlide * 100}%)`;
    }
  }

  function prevSlide() {
    if (currentSlide > 0) {
      currentSlide--;
      slides.style.transform = `translateX(-${currentSlide * 100}%)`;
    }
  }
</script>

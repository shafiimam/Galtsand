{% schema %}
{
  "name": "Sustainable & Ethical",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Section Title",
      "default": "Sustainable and Ethical T-Shirts"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Section Subtitle",
      "default": "Weâ€™re committed to reducing our environmental footprint"
    }
  ],
  "blocks": [
    {
      "type": "info_card",
      "name": "Info Card",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "Eco-Friendly Fabrics"
        },
        {
          "type": "text",
          "id": "description",
          "label": "Description",
          "default": "Using organic cotton and recycled polyester"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link (Product, Collection, or Page)"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Sustainable & Ethical",
      "category": "Custom Sections",
      "blocks": [
        {
          "type": "info_card"
        },
        {
          "type": "info_card"
        },
        {
          "type": "info_card"
        }
      ]
    }
  ]
}
{% endschema %}

<style>
  .sustainable-section {
    background-color: #dfd4be;
    padding: 60px 20px;
    {% comment %} text-align: left; {% endcomment %}
  }

  .sustainable-section h2 {
    font-family: 'EngraversGothic';
    color: #102345;
    font-size: 64px;
    text-transform: none;
    margin-bottom: 5px;
    letter-spacing: 1px;
    text-align: left;
  }

  .sustainable-section p {
    font-family: 'EngraversGothic';
    color: #102345;
    font-size: 18px;
    margin-bottom: 40px;
    text-align: left;
  }

  .sustainable-container {
    display: flex;
    justify-content: space-between;
    gap: 20px;
    flex-wrap: wrap;
  }

  /* Ensures all cards have the same height */
  .sustainable-card {
    background: transparent;
    border: 1px solid #102345;
    padding: 20px;
    text-align: left;
    width: 32%;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    align-items: flex-start;
    min-height: 420px;
  }

  /* Ensures all images inside the cards have the same size */
  .sustainable-card img {
    width: 100%;
    height: 532px; /* Fixed height to make all images uniform */
    object-fit: cover; /* Ensures images fit well without distortion */
    margin-bottom: 15px;
  }

  .sustainable-card h3 {
    text-align: left;
    font-family: "Gambarino";
    color: #102345;
    font-size: 43px;
    margin-bottom: 5px;
    text-transform: none;
    letter-spacing: 1px;
  }

  .sustainable-card p {
    text-align: left;
    font-family: var(--FONT-STACK-BODY);
    color: #102345;
    font-size: 16px;
    margin-bottom: 15px;
  }

  .sustainable-card a {
    text-decoration: none;
    color: #102345;
    font-size: 14px;
    font-weight: bold;
    display: block;
    margin-top: 10px;
  }

  /* Mobile View */
  @media (max-width: 768px) {
    .sustainable-container {
      flex-direction: column;
      gap: 20px;
    }

    .sustainable-card {
      width: 100%;
      min-height: 420px;
    }

    .sustainable-section h2 {
      font-size: 42px;
    }

    .sustainable-section p {
      font-size: 16px;
    }
  }
</style>

<div class="sustainable-section">
  <h2>{{ section.settings.title }}</h2>
  <p>{{ section.settings.subtitle }}</p>
  <div class="sustainable-container">
    {% for block in section.blocks %}
      <div class="sustainable-card">
        {% if block.settings.image != blank %}
          <img src="{{ block.settings.image | img_url: 'master' }}" alt="{{ block.settings.heading }}">
        {% endif %}
        <h3>{{ block.settings.heading }}</h3>
        <p>{{ block.settings.description }}</p>
        {% if block.settings.link != blank %}
          <a href="{{ block.settings.link }}">Learn More</a>
        {% endif %}
      </div>
    {% endfor %}
  </div>
</div>

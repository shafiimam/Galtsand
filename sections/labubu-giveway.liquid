  "name": "Labubu Giveaway",
  "settings": [
    {
        "type": "image_picker",
        "id": "image",
        "label": "Giveway Image"
    }
  ],
  "presets": [
    {
      "name": "Labubu Giveway",
      "category": "Giveway"
    }
  ]
}
{% endschema %}

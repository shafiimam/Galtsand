<style>
  .challenge-section {
    background-color: #660f28; /* Burgundy background */
    color: white;
    text-align: center;
    padding: 142px 20px;
    font-family: Arial, sans-serif;
    min-height: 1513px;
  }

  .container {
    position: relative;
    max-width: 1200px;
    margin: 0 auto;
  }

  .logo {
    margin-bottom: 20px;
  }

  .title {
    margin-bottom: -72px;
  }

  .title p {
    font-size: 40px;
    margin: 5px 0;
    font-family: 'Gambarino';
    color: #e6dbc4;
    letter-spacing: -2px;
    line-height: 1;
  }

  .image-grid {
    position: relative;
    margin-bottom: 40px;
  }

  .image-grid .image {
    position: absolute;
  }

  .image-grid .top-left {
    top: -215px;
    left: -12px;
    width: 334px;
    height: 150px;
  }

  .image-grid .top-right {
    top: -215px;
    right: -100px;
    width: 392px;
    /* height: 150px; */
  }

  .image-grid .bottom-left {
    bottom: -373px;
    left: -100px;
    width: 457px;
    height: 240px;
  }

  .image-grid .bottom-right {
    bottom: -331px;
    right: 312px;
    width: 510px;
    height: 185px;
  }

  .image img {
    width: 100%;
    height: auto;
    /* border-radius: 10px; */
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3);
  }

  .text-blocks {
    margin-top: 812px;
    display: flex;
    text-align: left;
    padding-left: 40px;
    padding-right: 40px;
  }
  .text-item {
    padding: 18px;
  }
  .text-item h2 {
    font-size: 24px;
    margin-bottom: 10px;
    font-family: 'EngraversGothic';
    color: #e6dbc4;
  }

  .text-item p {
    font-size: 14px;
    line-height: 1.6;
    font-weight: 100;
    font-family:var(--FONT-STACK-BODY);
    color: #cec3ac;
  }
  .img_centerized {
    margin: auto;
  }
  .stretch {
    transform: scale(0.9, 1); /* W3C */
  }
  @media screen and (max-width: 767px) {
    .challenge-section {
      padding: 30px 20px;
    }
    .image-grid .image {
      position: relative;
    }
    .image-grid .top-left {
      top: auto;
      right: auto;
      left: auto;
      width: auto;
      height: auto;
      bottom: auto;
    }
    .image-grid .top-right {
      top: auto;
      left: auto;
      right: auto;
      width: auto;
      height: auto;
      bottom: auto;
    }
    .image-grid .bottom-left {
      top: auto;
      left: auto;
      right: auto;
      width: auto;
      height: auto;
      bottom: auto;
    }
    .image-grid .bottom-right {
      top: auto;
      left: auto;
      right: auto;
      width: auto;
      height: auto;
      bottom: auto;
    }
    .title p {
      font-size: 2.3rem;
      letter-spacing: 0px;
    }
    .image-grid {
      display: flex;
      flex-direction: column;
      margin-top: 23%;
    }
    .image {
      margin-top: 10%;
    }
    .text-blocks {
      display: flex;
      margin-top: auto;
      flex-direction: column;
      padding-left: 0px;
      padding-right: 0px;
    }
  }
</style>
<section class="challenge-section">
  <div class="container">
    <!-- Title with distributed lines -->
    <div class="title">
      <img
        class="img_centerized"
        src="https://cdn.shopify.com/s/files/1/0642/2210/1717/files/Frame_2.png?v=1736280251"
        alt="logo"
        loading="lazy"
        width="100"
        height="100/"
      >
      <p class="stretch">Join us on our</p>
      <p class="stretch">journey of</p>
      <p class="stretch">challenges and</p>
      <p class="stretch">triumphs.</p>
    </div>

    <!-- Images around the text -->
    <div class="image-grid">
      <div class="image top-left">
        <img src="{{ section.settings.image_1 | image_url }}" alt="{{ section.settings.image_1_alt }}">
      </div>
      <div class="image top-right">
        <img src="{{ section.settings.image_2 | image_url }}" alt="{{ section.settings.image_2_alt }}">
      </div>
      <div class="image bottom-left">
        <img src="{{ section.settings.image_3 | image_url }}" alt="{{ section.settings.image_3_alt }}">
      </div>
      <div class="image bottom-right">
        <img src="{{ section.settings.image_4 | image_url }}" alt="{{ section.settings.image_4_alt }}">
      </div>
    </div>

    <!-- Text content below images -->
    <div class="text-blocks">
      <div class="text-block">
        <div class="text-item">
          <h2>{{ section.settings.subtitle_1 }}</h2>
          <p>{{ section.settings.description_1 }}</p>
        </div>
        <div class="text-item">
          <h2>{{ section.settings.subtitle_2 }}</h2>
          <p>{{ section.settings.description_2 }}</p>
        </div>
      </div>
      <div class="text-block">
        <div class="text-item">
          <h2>{{ section.settings.subtitle_3 }}</h2>
          <p>{{ section.settings.description_3 }}</p>
        </div>
        <div class="text-item">
          <h2>{{ section.settings.subtitle_4 }}</h2>
          <p>{{ section.settings.description_4 }}</p>
        </div>
      </div>
    </div>
    <a
      class="standard__cta herp__btn btn btn--white btn--long aos-init aos-animate"
      href="{{ section.settings.btn_link  }}"
    >
      {{- section.settings.btn_name -}}
    </a>
  </div>
</section>


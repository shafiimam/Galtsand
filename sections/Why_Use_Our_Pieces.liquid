{% schema %}
{
  "name": "T-Shirts Section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Why Our T-Shirts Are a Wardrobe Essential"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "Our t-shirts are more than just clothing—they’re an expression of your personality. Here’s why they’re a must-have:"
    },
    {
      "type": "header",
      "content": "Block 1"
    },
    {
      "type": "image_picker",
      "id": "icon_1",
      "label": "Icon 1 (Upload Image)"
    },
    {
      "type": "text",
      "id": "title_1",
      "label": "Title 1",
      "default": "Superior Fabric Quality"
    },
    {
      "type": "textarea",
      "id": "description_1",
      "label": "Description 1",
      "default": "We use high-grade materials like soft cotton, durable polyester, and premium blends for unmatched comfort."
    },
    {
      "type": "header",
      "content": "Block 2"
    },
    {
      "type": "image_picker",
      "id": "icon_2",
      "label": "Icon 2 (Upload Image)"
    },
    {
      "type": "text",
      "id": "title_2",
      "label": "Title 2",
      "default": "Wide Range of Styles"
    },
    {
      "type": "textarea",
      "id": "description_2",
      "label": "Description 2",
      "default": "From basic crew necks to statement prints, we offer a variety of options to suit any style."
    },
    {
      "type": "header",
      "content": "Block 3"
    },
    {
      "type": "image_picker",
      "id": "icon_3",
      "label": "Icon 3 (Upload Image)"
    },
    {
      "type": "text",
      "id": "title_3",
      "label": "Title 3",
      "default": "Versatility for Any Occasion"
    },
    {
      "type": "textarea",
      "id": "description_3",
      "label": "Description 3",
      "default": "Dress them up or down, our t-shirts are perfect for casual outings, gym sessions, or even semi-formal events."
    },
    {
      "type": "select",
      "id": "width",
      "label": "Width",
      "default": "wrapper",
      "options": [
        { "value": "wrapper", "label": "Wrapper" },
        { "value": "wrapper--none", "label": "Full width" },
        { "value": "wrapper--full", "label": "Full width padded" },
        { "value": "wrapper--narrow", "label": "Page width narrow" },
        { "value": "wrapper--tiny", "label": "Page width extra narrow" }
      ]
    }
  ],
  "presets": [
    {
      "name": "Why Use Our Pieces"
    }
  ]
}
{% endschema %}

<style>

  .tshirt-section p.subtitle {
    padding-left: 74px;
    font-size: 1.2em;
    color: #000000;
    font-weight: bold;
    text-transform: uppercase;
    margin-bottom: 40px;
  }
  .tshirt-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    width: 100%;
    gap: 20px;
    flex-wrap: wrap;
  }
  .tshirt-box {
    border: 1px solid #000000;
    padding: 20px;
    width: 100%;
    text-align: left;
    display: flex;
    align-items: center;
    gap: 15px;
  }
  .tshirt-box img.icon {
    width: 50px;
    height: 50px;
    object-fit: contain;
    margin-bottom: 20px;
  }
  .tshirt-content {
    flex: 1;
  }
  .tshirt-box p {
    font-family: var(--FONT-STACK-BODY);
    font-size: 1em;
    color: #102345;
  }
  @media (max-width: 768px) {
    .tshirt-grid {
      grid-template-columns: auto;
    }
    .tshirt-section p.subtitle {
      padding-left: 0px;
    }
    .tshirt-box {
      width: 100%;
    }
  }
</style>

<section class="tshirt-section {{ section.settings.width }}">
  <h2 class="heading-size-10 mb-r2 text-center">{{ section.settings.title }}</h2>
  <p class="body-size-5 mb-r8 text-center">{{ section.settings.subtitle }}</p>

  <div class="tshirt-grid">
    <div class="tshirt-box">
      <div class="tshirt-content">
        {% if section.settings.icon_1 != blank %}
          <img class="icon" src="{{ section.settings.icon_1 | image_url }}" alt="Icon 1">
        {% endif %}
        <h3 class="heading-size-7 mb-r4">{{ section.settings.title_1 }}</h3>
        <p class="body-size-5 mb-r8">{{ section.settings.description_1 }}</p>
      </div>
    </div>

    <div class="tshirt-box">
      <div class="tshirt-content">
        {% if section.settings.icon_2 != blank %}
          <img class="icon" src="{{ section.settings.icon_2 | image_url }}" alt="Icon 2">
        {% endif %}
        <h3 class="heading-size-7 mb-r4">{{ section.settings.title_2 }}</h3>
        <p class="body-size-5 mb-r8">{{ section.settings.description_2 }}</p>
      </div>
    </div>

    <div class="tshirt-box">
      <div class="tshirt-content">
        {% if section.settings.icon_3 != blank %}
          <img class="icon" src="{{ section.settings.icon_3 | image_url }}" alt="Icon 3">
        {% endif %}
        <h3 class="heading-size-7 mb-r4">{{ section.settings.title_3 }}</h3>
        <p class="body-size-5 mb-r8">{{ section.settings.description_3 }}</p>
      </div>
    </div>
  </div>
</section>

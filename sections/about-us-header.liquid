{% assign animation_anchor = "[data-section-id='" | append: section.id | append: "']" %}
<section class="about-us-header-section {{ section.settings.width }}" data-section-id="{{ section.id }}" style="padding-top: {{ section.settings.padding_top }}px; padding-bottom: {{ section.settings.padding_bottom }}px;">
  <div class="about-us-header-section__main aos-init aos-animate">
    <div class="about-us-header-section__text mb-r8">
      <h2
        class="about-us-header-section__heading heading-size-{{ section.settings.title_text_size }} text-center"
        style="color: {{ section.settings.title_text_color }};"
      >
        {{ section.settings.header_text }}
      </h2>
    </div>
    <div class="about-us-header-section__images">
      {% if section.settings.image_1 != blank %}
        <img
          src="{{ section.settings.image_1 | image_url: width: 1000 }}"
          alt="Image 1"
          class="image-1"
          data-aos="hero"
          data-aos-anchor="{{ animation_anchor }}"
          data-aos-order="1"
          width="100%"
          height="100%"
        >
      {% endif %}
      {% if section.settings.image_2 != blank %}
        <img
          src="{{ section.settings.image_2 | image_url: width: 1000 }}"
          alt="Image 2"
          id="Image-2"
          class="image-2"

          data-aos="hero"
          data-aos-anchor="{{ animation_anchor }}"
          data-aos-order="2"
          width="100%"
          height="100%"
        >
      {% endif %}
      {% if section.settings.image_3 != blank %}
        <img
          src="{{ section.settings.image_3 | image_url: width: 1000 }}"
          alt="Image 3"
          class="image-3"
          data-aos="hero"
          data-aos-anchor="{{ animation_anchor }}"
          data-aos-order="3"
          width="100%"
          height="100%"
        >
      {% endif %}
    </div>
  </div>
</section>

<style>
  p.about-us-header-section__paragraph {
    background: #000000;
    padding: 10px 20px;
    width: max-content;
    color: #ffffff;
    margin-inline: auto;
  }
  .about-us-header-section__images {
    display: grid;
    grid-template-columns: 1fr 1fr 1fr;
    grid-gap: var(--gutter);
  }
  .about-us-header-section__heading {
    max-width: 700px;
    margin: 0 auto;
  }
  .about-us-header-section__images img{
    height: 100%;
    object-fit: cover;
  }
  @media only screen and (max-width: 768px) {
    .about-us-header-section__images {
      grid-template-columns: 1fr;
    }
  }
</style>
{% schema %}
{
  "name": "About Us Header",
  "settings": [
    {
      "type": "text",
      "id": "header_text",
      "label": "Title",
      "default": "Curated Collections"
    },
    {
      "type": "range",
      "id": "title_text_size",
      "label": "Title text size",
      "min": 1,
      "max": 15,
      "step": 1,
      "default": 10
    },
    {
      "type": "color",
      "id": "title_text_color",
      "label": "Title text color",
      "default": "#000000"
    },
    {
      "type": "image_picker",
      "id": "image_2",
      "label": "First Image"
    },
    {
      "type": "image_picker",
      "id": "image_1",
      "label": "Second Image"
    },
    {
      "type": "image_picker",
      "id": "image_3",
      "label": "Third Image"
    },
    {
      "type": "select",
      "id": "width",
      "label": "Section width",
      "default": "wrapper--none",
      "options": [
        { "value": "wrapper--none", "label": "Full width" },
        { "value": "wrapper--full", "label": "Full width padded" },
        { "value": "wrapper", "label": "Page width" }
      ]
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 180,
      "step": 2,
      "unit": "px",
      "label": "Padding top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 180,
      "step": 2,
      "unit": "px",
      "label": "Padding bottom",
      "default": 36
    }
  ],
  "presets": [
    {
      "name": "About Us Header",
      "settings": {
        "header_text": "Honoring History through Heritage and Sport",
        "title_text_size": 10,
        "title_text_color": "#000000"
      }
    }
  ]
}
{% endschema %}
